/* ----------------- BUTTONS ----------------- */
QPushButton 
{
    background-color: --button-background--;
    color: --button-text--;
    border: 1px solid --button-border--;
    padding-top: 7px;
    padding-bottom:6px;
    padding-left:15px;
    padding-right:15px;
    border-radius: 4px;
}

QPushButton.MenuItem 
{
    background-color: transparent;
    color: --button-text--;
    border: none;
    padding: 5px 15px;
    text-align: left;
    font-size:12pt;
}

QPushButton.MenuItem:checked 
{
    background-color: --button-background--;
    border-left:6px solid --accent--;
    border-radius:0px;
}
QPushButton.mini 
{
    background-color: --button-background--;
    color: --button-text--;
    border: none;
    padding: 2px;
    border-radius: 4px;
    width: 24px;
    min-width:24px;
    max-width: 24px;
    height: 24px;
    min-height:24px;
    max-height:24px;
}
QPushButton.checkLike
{
    background-color: transparent;
    color: --button-text--;
    border: 2px solid --accent--;
    padding: 0px;
    border-radius: 4px;
    width: 16px;
    min-width:16px;
    max-width: 16px;
    height: 16px;
    min-height:16px;
    max-height:16px;
}
QPushButton.grouped_mini
{
    background-color: transparent;
    color: --button-text--;
    border: none;
    padding: 3px;
    border-radius: 4px;
    width: 24px;
    min-width:24px;
    max-width: 24px;
    height: 24px;
    min-height:24px;
    max-height:24px;
}
QPushButton.mini::menu-indicator, 
QPushButton.grouped_mini::menu-indicator
{  
    width: 0px;
    min-width:0px;
    max-width: 0px;
    height: 0px;
    min-height:0px;
    max-height:0px;
}

QPushButton.closebutton 
{
    font-size:14px;
    background-color: transparent;
    color: --button-text--;
    padding: 5px;
    border-top-left-radius: 0px;
    border-bottom-right-radius: 0px;
    border-top-right-radius: 8px;     /* To sync by top-right border of the main window*/
    border-bottom-left-radius: 0px;
    border-width: 0px;
    width: 32px;
    min-width:32px;
    max-width: 24px;
    height: 24px;
    min-height:24px;
    max-height:24px;
}
QPushButton:pressed,
QPushButton.grouped_mini:pressed,
QPushButton.mini:pressed,
QPushButton.MenuItem:pressed
{
    background-color: --button-pressed--;
}

QPushButton:disabled,
QPushButton.mini:disabled , 
QPushButton.grouped_mini:disabled, 
QPushButton.MenuItem:disabled
{
    background-color: --button-disabled--;
    border: 1px solid --disabled-border--;
    color: --button-disabled-text--;
}
QPushButton.closebutton:hover
{
    background-color: #c80a0a;
    border:none;
}
QPushButton:hover,
QPushButton.grouped_mini:hover,
QPushButton.mini:hover,
QPushButton.MenuItem:hover,
QPushButton.checklike
{
    background-color: --button-hover--;
    border-left:3px solid --accent--;
    border-right:3px solid --accent--;
    padding: 5px 10px;
    font-size:10pt;
}

QPushButton::menu-indicator 
{  
    subcontrol-origin: padding;
    subcontrol-position: right center;
    right: 0px;
    width: 0px;
    height: 0px;
}
QPushButton::menu-indicator:open 
{
    background-color: --button-text--;
}
QPushButton::menu-indicator:closed 
{
    background-color: --button-background--;
}
QPushButton::down-arrow 
{
    image: url(down_arrow.png);
    width: 12px;
    height: 12px;
}
QPushButton::down-arrow:on 
{
    top: 1px;
}
QCheckBox,
QRadioButton 
{
    background-color:transparent;
    color: --button-text--;
}

QCheckBox::indicator,
QRadioButton::indicator 
{
    width: 16px;
    height: 16px;
    border: 1px solid --accent--;
    border-radius: 4px;
    padding:1px;
}

QCheckBox::indicator:checked,
QRadioButton::indicator:checked 
{
    background-color: --accent--;
    border: 0px;
    image: url(check.png);
}
QCheckBox:hover
{
    border: none;
}
QCheckBox::indicator:hover,
QRadioButton::indicator:hover 
{
    border: 1px solid --button-hover--;
}

QSlider::groove:horizontal, QSlider::groove:vertical 
{
    background-color: --surface-variant--;
    border-radius: 4px;
}

QSlider::handle:horizontal, QSlider::handle:vertical 
{
    background-color: --accent--;
    border-radius: 4px;
}

QSlider::handle:horizontal:hover, QSlider::handle:vertical:hover 
{
    background-color: --accent-light--;
}

QSlider::handle:horizontal:pressed, QSlider::handle:vertical:pressed
{
    background-color: --button-pressed--;
}

/* Progress Bar */
QProgressBar 
{
        background-color: --surface-variant--;
        border: none;
        border-radius: 3px;
        height: 6px;
        max-height:6px;
        min-height:0px;
        padding: 0px;
        text-align:top-center;
}

QProgressBar::chunk 
{
    background-color: --accent--;
    border-radius: 3px;
    margin: 0px 0px 0px 0px;
}


 /* ---------------------------  MENU ---------------------------- */

QMenu 
{
    background-color: --base-background--;
    color: --text-primary--;
    border: 1px solid --accent--;
    border-radius:4px;
    padding:0px;
}

QMenu::icon 
{
    padding-left: 8px;         /* This adds margin to the icon itself */
    padding-right: 8px;        /* Adds space between icon and text */
}
QMenu::item 
{
    padding-left: 16px;        /* Total left padding: space for icon + extra margin */
    padding-right:16px;
    padding-top:8px;
    padding-bottom:8px;

}
QMenu::item:selected 
{
    background-color: --accent-light--;
    color: --accent-contrast--;
    border-left: 3px solid --accent--;
    border-right: 3px solid --accent--;
}

QMenu::separator 
{
    height: 1px;
    background: --border--;
    margin: 5px 0;
}

QMenu::item:disabled 
{
    color: --text-disabled--;
}


/* Horizontal Groove */
QSlider::groove:horizontal 
{
    border: 1px solid --border--;
    height: 4px;
    background: --surface-variant--;
    margin: 0 8px;
    border-radius: 2px;
}

QSlider::groove:vertical 
{
    border: 1px solid --border--;
    width: 4px;
    background: --surface-variant--;
    margin: 8px 0;
    border-radius: 2px;
}

/* Horizontal Handle */
QSlider::handle:horizontal 
{
    background: --accent--;
    border: 1px solid --accent--;
    width: 16px;
    height: 16px;
    margin: -6px 0px;
    border-radius: 8px;
}

QSlider::handle:vertical
{
    background: --accent--;
    border: 1px solid --accent--;
    width: 16px;
    height: 16px;
    margin: 0px -6px;
    border-radius: 8px;
}

/* Hover Effects */
QSlider::handle:hover 
{
    background: --accent-light--;
    border: 1px solid --accent--;
}

/* Horizontal Sub-page (filled part) */
QSlider::sub-page:horizontal 
{
    background: --accent--;
    border-radius: 3px;
}

QSlider::sub-page:vertical 
{
    background: --surface--;
    border-radius: 3px;
}
/* Horizontal Add-page (unfilled part) */
QSlider::add-page:horizontal 
{
    background: --surface--;
    border-radius: 3px;
}

QSlider::add-page:vertical 
{
    background: --accent--;
    border-radius: 3px;
}
