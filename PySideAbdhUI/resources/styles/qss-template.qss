/* Managed: this templete is a bundle with color-roles.json */

QWidget[class="window-background-layer"] 
{
    background-color: --base-background--;
    color: --text-secondary--;
    border: none;
    border-radius: 8px;
    padding: 25px;
}

/* background layer of panels and surfaces*/
QWidget[class="surface-background-layer"] 
{
    background-color: --surface--;
    color: --text-secondary--;
    border: 1px solid --border--;
    border-radius: 8px;
}

/* background layer of cards in the panels */
QWidget[class="card"] 
{
    background-color: --surface-variant--;
    border: 2px solid --border--;
    border-radius: 6px;
    padding: 5px;
}

/* background layer of cards when selected */
QWidget[class="card-selected"] 
{
    background-color: --accent--;
    border:2px solid --accent-light--;
}

/* background layer of Sidebar panels */
QFrame[class="left-sidebar-background-layer"] 
{
    background-color: --surface--;
    color: --text-secondary--;
    border: none;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    padding: 0px;
}
/* background layer of Sidebar panels */
QFrame[class="right-sidebar-background-layer"]
{
    background-color: --surface--;
    color: --text-secondary--;
    border: none;
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    padding: 0px;
}

/* Learning materials with white background in the papers */
QLabel[class="EduText"]
{
    background-color: #ffffff;
    color: #202124;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    padding: 8px;
    border:none;
    vertical-align:top;
}

QWidget[class="EduItem"]
{
    background-color: #ffffff;
    color: #202124;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    border:none;
}

QWidget#Titlebar 
{
    background-color: transparent;
    color: --text-secondary--;
    border: 0px;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 0px;
}


/* Popup Main Widget */
QWidge#PopupNotifier 
{
    background-color: --surface-variant--;
    border: 1px solid --accent--;
    border-radius: 8px;
    padding: 0px;
}

/* Popup Title Area */
QWidget#PopupTitle 
{
    background-color: --accent--; 
    color: --accent-contrast--; 
    border-top: 1px solid --accent-light--;
    border-left: 1px solid --accent-light--;
    border-right: 1px solid --accent-light--;
    border-bottom:none;
    font-weight: bold;
    padding: 6px 10px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-left-radius:0px;
    border-bottom-right-radius:0px;
}

/* Popup Content Text (like QLabel inside)*/
QLabel#PopupText 
{
    color: --text-primary--;
    background-color: --surface--; 
    padding: 6px 10px;
    border-top: none;
    border-left: 1px solid --accent-light--;
    border-right: 1px solid --accent-light--;
    border-bottom:none;
    border-radius: 0px;
}
QDateEdit {
    background-color: #2A2A2A; /* input-background */
    color: #F1F1F1; /* text-primary */
    border: 1px solid #4A4A4A; /* input-border */
    border-radius: 6px;
    padding: 4px 8px;
    selection-background-color: #0c4ce0; /* accent */
    selection-color: #FFFFFF; /* accent-contrast */
}

QDateEdit:hover {
    background-color: #2E2E2E; /* hover */
    border: 1px solid #156fff; /* accent-light */
}

QDateEdit:focus {
    border: 1px solid #0c4ce0; /* accent */
}

QDateEdit:disabled {
    background-color: #2B2B2B; /* input-disabled-background */
    color: #777777; /* input-disabled-text */
    border: 1px solid #2F2F2F; /* disabled-border */
}

QDateEdit::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #4A4A4A; /* input-border */
    background-color: #2A2A2A; /* input-background */
}

QDateEdit::down-arrow {
    image: url(:/icons/down-arrow-light.png); /* optional, you can remove or customize */
    width: 12px;
    height: 12px;
}

QCalendarWidget {
    background-color: #1C1C1C; /* surface */
    color: #F1F1F1; /* text-primary */
    border: 1px solid #3A3A3A; /* border */
    selection-background-color: #0c4ce0; /* accent */
    selection-color: #FFFFFF; /* accent-contrast */
}

QCalendarWidget QWidget#qt_calendar_navigationbar { 
    background-color: #2C2C2C; /* button-background */
}

QCalendarWidget QToolButton {
    background-color: #2C2C2C; /* button-background */
    color: #F1F1F1; /* button-text */
    border: none;
    padding: 5px;
}

QCalendarWidget QToolButton:hover {
    background-color: #383838; /* button-hover */
}

QCalendarWidget QToolButton:pressed {
    background-color: #4A4A4A; /* button-pressed */
}

QCalendarWidget QToolButton:disabled {
    background-color: #2B2B2B; /* button-disabled */
    color: #777777; /* button-disabled-text */
}

QCalendarWidget QSpinBox {
    background-color: #2A2A2A; /* input-background */
    color: #F1F1F1; /* text-primary */
    border: 1px solid #4A4A4A; /* input-border */
    padding: 2px;
}

QCalendarWidget QSpinBox::up-button, 
QCalendarWidget QSpinBox::down-button {
    background-color: #2C2C2C; /* button-background */
}

QCalendarWidget QSpinBox::up-button:hover, 
QCalendarWidget QSpinBox::down-button:hover {
    background-color: #383838; /* button-hover */
}

QCalendarWidget QSpinBox::up-button:pressed, 
QCalendarWidget QSpinBox::down-button:pressed {
    background-color: #4A4A4A; /* button-pressed */
}

QPushButton#PopupActionButton 
{
    background: --button-background--;
    color: --button-text--;
    border-top: none;
    border-left: 1px solid --accent-light--;
    border-right: none;
    border-bottom:1px solid --accent-light--;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    border-bottom-left-radius:8px;
    border-bottom-right-radius:0px;
}
/* Optional: Close Button inside Popup */
QPushButton#PopupCloseButton 
{
    background: --button-background--;
    color: --button-text--;
    border-top: none;
    border-left: none;
    border-right: 1px solid --accent-light--;
    border-bottom:1px  solid --accent-light--;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    border-bottom-left-radius:0px;
    border-bottom-right-radius:8px;
}
QPushButton#PopupActionButton:hover 
{
    background-color: --button-hover--;
    color: --accent-contrast--;
}
QPushButton#PopupCloseButton:hover 
{
    background-color: #dc3545;
    color: --accent-contrast--;
}

