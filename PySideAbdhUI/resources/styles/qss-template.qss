/* ----------------- TEXT STYLES ----------------- */

/* General Label Defaults */
QLabel 
{
    border-radius: 4px;
    border: none;
    background-color: transparent;
    color: --text-secondary--;
    padding: 4px 8px;
}
QLabel::focus
{
    color:red;
}
/* Headings */
QLabel[class="heading1"] {
    color: --text-primary--;
    font-size: 24pt;
    font-weight: bold;
}

QLabel[class="heading2"] 
{
    color: --text-primary--;
    font-size: 20pt;
    font-weight: bold;
}

QLabel[class="heading3"] {
    color: --text-primary--;
    font-size: 16pt;
    font-weight: bold;
}
/* Title */
QLabel[class="title"] {
    color: --text-primary--;
    font-size: 18pt;
    font-weight: 600;
    letter-spacing: 0.5px;
}

/* Subtitle */
QLabel[class="subtitle"] {
    color: --text-secondary--;
    font-size: 14pt;
    font-weight: 600;
}

/* Caption */
QLabel[class="caption"] {
    color: --text-disabled--;
    font-size: 10pt;
}

/* Hyperlink */
QLabel[class="hyperlink"] 
{
    color: --accent--;
    text-decoration: underline;
    font-weight: normal;
}

QLabel[class="hyperlink"]:hover {
    color: --accent-light--;
}

/* Inverse text (for light surfaces) */
QLabel[class="inverse"] {
    color: --text-inverse--;
}

/* Monospace (code-like) */
QLabel[class="code"] {
    font-family: Consolas, "Courier New", monospace;
    font-size: 11pt;
    color: --text-primary--;
}

/* Emphasis */
QLabel[class="emphasis"] {
    font-style: italic;
    color: --text-primary--;
}

/* Strong emphasis */
QLabel[class="strong"] 
{
    font-weight: bold;
    color: --text-primary--;
}

/*------------------- data and lists ----------- */

QTableWidget 
{
    background-color: --base-background--;
    color: --text-primary--;
    border: 1px solid --border--;
    border-radius: 4px;
    gridline-color: --border--;
    selection-background-color: --accent-light--;
    selection-color: --accent-contrast--;
    alternate-background-color: --surface-variant--; /* Optional: zebra stripes */
}
/* All headers */
QHeaderView::section 
{
    background-color: --surface--;
    color: --text-primary--;
    padding: 5px;
    border-top: 1px solid --border--;
    font-weight: bold;
}

/* First header section (left-most) */
QHeaderView::section:first 
{
    border-top-left-radius: 4px;
    border-left: 1px solid --border--;
    border-top: 1px solid --border--;
}

/* Last header section (right-most) */
QHeaderView::section:last 
{
    border-top-right-radius: 4px;
    border-right: 1px solid --border--;
    border-top: 1px solid --border--;
}


QTableCornerButton::section 
{
    background-color: --surface-variant--;
    border: 1px solid --border--;
}

QTableWidget::item 
{
    padding: 4px;
}

QTableWidget::item:selected 
{
    background-color: --accent-light--;
    color: --accent-contrast--;
}

/* Remove cell hover effect */
QTableWidget::item:hover 
{
    background-color: transparent;
}
/* Disabled Item */
QTableWidget::item:disabled 
{
    color: --text-disabled--;
}

/* Editable Cell Focus (when editing) 
QTableWidget::item:focus 
{
    background-color: --input-background--;
    color: --text-primary--;
    border: 1px solid --accent--;
}

 Editable Cell Hover (optional) 
QTableWidget::item:hover 
{
    background-color: --hover--;
    color: --text-primary--;
}
*/
/* Scrollbars */
QTableWidget QScrollBar:vertical,
QTableWidget QScrollBar:horizontal {
    background-color: --surface-variant--;
    border: none;
}

QTableWidget QScrollBar::handle:vertical,
QTableWidget QScrollBar::handle:horizontal {
    background-color: --accent--;
    border-radius: 4px;
}

QTableWidget QScrollBar::add-line,
QTableWidget QScrollBar::sub-line {
    background: none;
    border: none;
}
QMessageBox 
{
    background-color: --surface-variant--;
    border: 1px solid --border--;
    border-radius: 8px;
}
/* ----------------- EDIT ----------------- */
QLineEdit, QTextEdit, 
QPlainTextEdit, QComboBox, 
QDateTimeEdit, QTimeEdit, QDateEdit
{
    background-color: --input-background--;
    color: --text-primary--;
    border: 1px solid --input-border--;
    padding-top:5px;
    padding-bottom:5px;
    padding-left:5px;
    padding-right:5px;
    border-radius: 4px;
}

QLineEdit:focus, QTextEdit:focus, 
QPlainTextEdit:focus, QCheckBox:focus, 
QDateTimeEdit:focus, QDateEdit:focus, QTimeEdit:focus
{
    border: 1px solid --accent--;
}

QLineEdit:disabled, 
QTextEdit:disabled, 
QPlainTextEdit:disabled, 
QCheckBox:disabled, 
QDateTimeEdit:disabled, 
QTimeEdit:disabled
{
    background-color: --input-disabled-background--;
    border: 1px solid --input-disabled-border--;
    color: --input-disabled-text--;
}

QLineEdit:hover, QTextEdit:hover, 
QPlainTextEdit:hover, QCheckBox:hover, 
QDateTimeEdit:hover, QTimeEdit:hover
{
    border: 1px solid --accent-light--;
}
QComboBox::open
{
    border: 1px solid --accent--;
}
QComboBox::drop-down 
{
    border: none;
    width: 20px;
}

QComboBox::down-arrow 
{
    image: none;
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView 
{
    background-color: --input-background--;
    color: --text-primary--;
    selection-background-color: --accent--;
    border: 1px solid --accent--;
    border-radius: 4px;
}
