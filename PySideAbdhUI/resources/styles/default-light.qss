    padding-left:4px;
    padding-right:4px;
    padding-top:2px;
    padding-bottom:2px;
    height: 24px;
    min-height:24px;
}

QLabel.hyperlink 
{
    color: #1a73e8; /* Unchanged */
}

QLabel.hyperlink:hover 
{
    color: #1557b0; /* Darker blue */
}

/* All original pseudo-states preserved */
QPushButton.mini:hover, 
QPushButton.grouped_mini:hover, 
QPushButton.MenuItem:hover
{
    background-color:#e9ecef; /* Changed */
    border-left:2px solid #1a73e8; /* Unchanged */
    border-right:2px solid #1a73e8;
}

/* All original size constraints preserved */
QPushButton.mini {
    width: 24px;
    min-width:24px;
    height: 24px;
    min-height:24px;
    max-height:24px;
}

/* All original images preserved (urls kept, assume light variants exist) */
QCheckBox::indicator:checked {
    image: url(check.png); /* Original */
}

